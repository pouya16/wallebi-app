<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?attr/backgroundDef"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.fragment.app.FragmentContainerView
            android:layout_width="@dimen/width_hamburger_menu"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:id="@+id/fragment_menu"
            android:visibility="gone"/>

        <androidx.fragment.app.FragmentContainerView
            android:layout_width="@dimen/width_notif"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:id="@+id/fragment_notif"
            android:visibility="visible"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_toolbar"
            android:layout_alignParentStart="true"
            android:id="@+id/top_toolbar"
            android:backgroundTint="?attr/backgroundLevel2">

        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top_toolbar"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/register"
                    android:layout_margin="@dimen/margin_8"
                    android:backgroundTint="@color/mvp_greem"
                    android:id="@+id/btn_by"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/login"
                    android:layout_margin="@dimen/margin_8"
                    android:backgroundTint="@color/mvp_red"
                    android:id="@+id/btn_sell"/>

            </LinearLayout>


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/not_loged_in"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:id="@+id/txt_login_status"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/email"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:id="@+id/txt_login_email"/>

        </LinearLayout>


    </RelativeLayout>
</FrameLayout>