<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/main_left"
    android:layout_marginRight="@dimen/main_right"
    android:layout_marginTop="@dimen/top_flogo_su"
    android:background="?attr/backgroundDef"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:theme="@style/textTopHint"
        android:textColor="@color/mvp_gray4"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        app:boxStrokeWidth="3dp"
        style="@style/Widget.Material3.TextInputLayout.FilledBox"
        app:boxStrokeErrorColor="@color/mvp_red"
        app:boxCornerRadiusBottomEnd="@dimen/corner_radius_app_default">
    </com.google.android.material.textfield.TextInputLayout>



</LinearLayout>