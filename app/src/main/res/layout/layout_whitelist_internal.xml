<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/backgroundLevel3">




    <LinearLayout
        android:id="@+id/layout_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin_top_16"
        android:paddingEnd="@dimen/margin_top_16"
        android:paddingTop="@dimen/padding_external_white"
        android:paddingBottom="@dimen/padding_external_white"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_uid"
            android:textColor="?attr/textGray3" />


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/backgroundLevel4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_input"
                    android:layout_weight="1"
                    android:id="@+id/txt_address_external"
                    android:background="@android:color/transparent"/>


            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>








    <LinearLayout
        android:id="@+id/layout_mark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin_top_16"
        android:paddingEnd="@dimen/margin_top_16"
        android:paddingTop="@dimen/padding_external_white"
        android:paddingBottom="@dimen/padding_external_white"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mark"
            android:textColor="?attr/textGray3" />


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/backgroundLevel4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_input"
                    android:layout_weight="1"
                    android:id="@+id/txt_mark_external"
                    android:background="@android:color/transparent"/>


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_g2f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin_top_16"
        android:paddingEnd="@dimen/margin_top_16"
        android:paddingTop="@dimen/padding_external_white"
        android:paddingBottom="@dimen/padding_external_white"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/g2f_code"
            android:textColor="?attr/textGray3" />


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/backgroundLevel4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_input"
                    android:layout_weight="1"
                    android:id="@+id/txt_g2f_external"
                    android:background="@android:color/transparent"/>


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/margin_top_16"
        android:paddingEnd="@dimen/margin_top_16"
        android:paddingTop="@dimen/padding_external_white"
        android:paddingBottom="@dimen/padding_external_white"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/otp_code"
            android:textColor="?attr/textGray3" />


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/backgroundLevel4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_input"
                    android:layout_weight="1"
                    android:id="@+id/txt_otp_external"
                    android:background="@android:color/transparent"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:text="@string/send_code"
                    android:textColor="?attr/colorPrimary"
                    android:id="@+id/btn_code_external"/>


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_12"
        android:paddingStart="@dimen/margin_top_16"
        android:paddingEnd="@dimen/margin_top_16"
        android:paddingTop="@dimen/padding_external_white"
        android:paddingBottom="@dimen/padding_external_white"
        android:text="@string/whitelist_internal_explai"
        android:textColor="?attr/textGray2"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:paddingStart="@dimen/margin_top_16"
        android:paddingEnd="@dimen/margin_top_16"
        android:paddingTop="@dimen/padding_external_white"
        android:paddingBottom="@dimen/padding_external_white"
        android:text="@string/whitelist_internal_explain_s"
        android:textColor="?attr/textGray2"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_4"
        android:paddingStart="@dimen/margin_top_16"
        android:paddingEnd="@dimen/margin_top_16"
        android:paddingTop="@dimen/padding_external_white"
        android:paddingBottom="@dimen/padding_external_white"
        android:text="@string/whitelist_internal_explain_m"
        android:textColor="?attr/textGray2"/>


</LinearLayout>