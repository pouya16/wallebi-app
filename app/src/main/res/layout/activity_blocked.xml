<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundDef"
    tools:context=".acitivities.BlockedActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/modal_right_margin"
        android:layout_marginEnd="@dimen/modal_right_margin"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logo_stop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/too_many_attemps"
            android:textColor="?attr/textGray3"
            android:textSize="@dimen/default_input_text_size"
            android:layout_marginTop="@dimen/margin_top_16"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/corner_radius_app_default"
            android:layout_marginTop="@dimen/margin_32"
            android:background="?attr/backgroundDef"
            android:backgroundTint="?attr/backgroundDef"
            app:strokeWidth="@dimen/stroke_2"
            app:strokeColor="@color/mvp_gray3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="@dimen/margin_32">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dear_user"
                    android:textColor="?attr/textGray3"
                    android:textSize="@dimen/default_input_text_size"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trouble_code_support"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/margin_32"
                    android:textColor="?attr/textGray3"
                    android:textSize="@dimen/default_input_text_size"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/try_more"
                    android:layout_marginTop="@dimen/margin_32"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/default_input_text_size"/>


            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>