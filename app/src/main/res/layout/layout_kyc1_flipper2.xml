<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/margin_left_21"
    android:layout_marginEnd="@dimen/margin_left_21"
    android:background="@android:color/transparent"
    android:backgroundTint="@android:color/transparent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_next_p2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/textGray4"
                android:layout_marginTop="@dimen/margin_32"
                android:text="@string/enter_id"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_input"
                app:cardBackgroundColor="@color/mvp_bg_dark3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:background="@android:color/transparent"
                        android:id="@+id/txt_id"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mvp_red"
                android:id="@+id/txt_id_error"
                android:visibility="invisible"
                android:text="@string/enter_id"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/textGray4"
                android:layout_marginTop="@dimen/margin_26"
                android:text="@string/front_of_idcard"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:background="@drawable/dashed_stroke">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:background="@color/mvp_bg_dark3"
                    android:id="@+id/national_card_front"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/mvp_bg_dark3"
                    android:layout_height="@dimen/height_kyc_nationalcard">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_12">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_id_clear"
                                android:textColor="?attr/textGray2"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/only_jpg_png"
                                android:textColor="?attr/textGray2"/>



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/max_3m"
                                android:textColor="?attr/textGray2"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_huge"
                                android:layout_marginTop="@dimen/margin_8"
                                android:text="@string/plus_upload"
                                android:textColor="?attr/textGray3"/>


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/img_ncard_front"
                                android:id="@+id/img_card_front"/>

                        </RelativeLayout>


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/textGray4"
                android:layout_marginTop="@dimen/margin_26"
                android:text="@string/back_of_idcard"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:background="@drawable/dashed_stroke">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:background="@color/mvp_bg_dark3"
                    android:id="@+id/national_card_back"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/mvp_bg_dark3"
                    android:layout_height="@dimen/height_kyc_nationalcard">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_12">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_id_clear"
                                android:textColor="?attr/textGray2"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/only_jpg_png"
                                android:textColor="?attr/textGray2"/>



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/max_3m"
                                android:textColor="?attr/textGray2"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_huge"
                                android:layout_marginTop="@dimen/margin_8"
                                android:text="@string/plus_upload"
                                android:textColor="?attr/textGray3"/>


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/img_ncard_back"
                                android:id="@+id/img_card_back"/>

                        </RelativeLayout>


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>




    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_def"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/btn_next_p2"
        android:layout_marginBottom="@dimen/margin_18"
        android:textColor="?attr/backgroundDef"/>

</androidx.constraintlayout.widget.ConstraintLayout>