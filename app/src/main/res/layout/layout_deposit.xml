<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:padding="@dimen/padding_26">

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/progress_deposit"/>

    <LinearLayout
        android:id="@+id/layout_deposit_inside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">


        <ImageView
            android:id="@+id/img_qr"
            android:layout_width="@dimen/width_qr"
            android:layout_height="@dimen/width_qr"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_top_16"
            android:background="@color/mvp_gray1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_16"
            android:text="@string/depoit_to"
            android:textColor="?attr/textGray2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_deposit_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_18"
                android:layout_weight="1"
                android:text="@string/test_address"
                android:textColor="?attr/textGray3" />

            <ImageButton
                android:id="@+id/img_cpy_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:src="@drawable/ic_copy" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_16"
            android:text="@string/tag"
            android:id="@+id/txt_tag_header"
            android:textColor="?attr/textGray2" />

        <LinearLayout
            android:id="@+id/layout_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_tag_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_18"
                android:layout_weight="1"
                android:text="@string/test_tag"
                android:textColor="?attr/textGray3" />

            <ImageButton
                android:id="@+id/img_cpy_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:src="@drawable/ic_copy" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_transaction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/transactions"
                android:textColor="?attr/btnColorGray"
                app:backgroundTint="?attr/backgroundDef"
                app:icon="@drawable/ic_transactions"
                app:iconGravity="textStart"
                app:iconTint="?attr/btnColorGray"
                app:strokeColor="?attr/btnColorGray"
                app:strokeWidth="@dimen/stroke_2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_weight="1"
                android:text="@string/share"
                android:textColor="?attr/backgroundDef"
                app:icon="@drawable/ic_share"
                app:iconGravity="textStart"
                app:iconTint="?attr/backgroundDef" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_deposit_alert_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_18"
            android:textColor="?attr/textGray2" />

        <TextView
            android:id="@+id/txt_deposit_alert_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:textColor="?attr/textGray2" />


        <TextView
            android:id="@+id/txt_deposit_alert_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:textColor="?attr/textGray2" />


    </LinearLayout>

</LinearLayout>