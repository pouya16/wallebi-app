<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wallebiapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mvp_yellow</item>
        <item name="colorPrimaryVariant">@color/mvp_gray3</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="fontFamily">@font/dana</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mvp_gray2</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/mvp_gray2</item>
        <item name="textColorHint">@color/mvp_gray4</item>

        <item name="textGray3">@color/mvp_gray3</item>
        <item name="textGray4">@color/mvp_gray4</item>
        <item name="textGray2">@color/mvp_gray2</item>
        <item name="textGray">@color/mvp_gray0</item>
        <item name="textGray1">@color/mvp_gray1</item>

        <item name="backgroundTint">@color/mvp_gray3</item>
        <item name="backgroundDef">@color/mvp_bg_dark1</item>
        <item name="backgroundLevel3">@color/mvp_bg_dark3</item>
        <item name="backgroundLevel4">@color/mvp_bg_dark4</item>
        <item name="backgroundLevel2">@color/mvp_bg_dark2</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="tab_home" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/mvp_gray4</item>
        <item name="tabTextColor">@color/mvp_gray2</item>
        <item name="fontFamily">@font/dana</item>
        <item name="tabIndicatorColor">@color/mvp_yellow</item>
        <item name="tabPaddingBottom">-0dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <style name="tab_home_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/dana</item>
    </style>




    <style name="textTopHint" parent="Widget.AppCompat.TextView">
        <item name="textColor">?attr/textColorHint</item>
        <item name="fontFamily">@font/dana</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="btn_father" parent="ThemeOverlay.Material3.Button">
        <item name="cornerRadius">2dp</item>
        <item name="fontFamily">@font/dana</item>
    </style>

    <style name="btn_primary" parent="btn_father">
        <item name="backgroundColor">@color/mvp_yellow</item>
    </style>


</resources>